    "prop-types": ">=15.7.0",
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0",
    "styled-components": ">=4.4.1"
  },
  "jest": {
    "setupFilesAfterEnv": [
      "./setupTests.js"
    ]
